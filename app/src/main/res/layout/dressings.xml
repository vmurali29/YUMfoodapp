<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"

    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="CHOOSE DRESSINGS"
        android:textSize="5.5mm"
        android:typeface="serif"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#eceff1"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:text="MAYONNAISE"
        android:textSize="35dp"
        android:textStyle="normal"
        android:buttonTint="#ffff"
        />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:text="LITE MAYONNAISE"
        android:textAlignment="center"
        android:typeface="serif"
        android:buttonTint="#ffff"
        />


    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:text="MUSTARD"
        android:textAlignment="center"
        android:buttonTint="#ffff"
        />
    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:text="RANCH"
        android:textAlignment="center"
        android:buttonTint="#ffff"
        />
    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:text="HOT SAUCE"
        android:textAlignment="center"
        android:buttonTint="#ffff"
        />

    <Button
        android:id="@+id/button"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Next: Order Confirmation" />


</LinearLayout>